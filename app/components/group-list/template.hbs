<div class="content">
  <div class="header">
    Groups
  </div>
</div>
<div class="content">
  <ul class="group-list">
    <li class="header-row">
      <div>
        Name
      </div>
      <div>
        Members
      </div>
      <div>
        Current Balance
      </div>
    </li>
    {{#if model}}
      {{#each model as |group|}}
        {{#link-to "main.home.group.edit" group.id class="clickable link record-row" tagName="li"}}
          <div>
            {{group.name}}
          </div>
          <div>
            {{group.memberships.length}}
          </div>
          <div class="{{if group.isNegative 'text-bolder text-red'}}">
            {{format-currency group.balance}}
          </div>
        {{/link-to}}
      {{/each}}
    {{else}}
      <li class="no-data">
        <h4>No groups to display</h4>
      </li>
    {{/if}}
  </ul>
</div>
