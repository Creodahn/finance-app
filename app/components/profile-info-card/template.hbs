<article class="ui card">
  <div class="image">
    {{#if model.profilePicture}}
      {{profile-photo-upload model=model}}
    {{else}}
      <i class="ui user circle outline icon blow-up"></i>
    {{/if}}
  </div>
  <div class="content">
    <div class="header">
      {{model.name}}
    </div>
    <div class="meta">
      Joined in {{moment-format joined "YYYY"}}
    </div>
    <div class="description">
      {{#unless model.bio}}
        Some words go here
      {{else}}
        {{model.bio}}
      {{/unless}}
    </div>
  </div>
</article>
