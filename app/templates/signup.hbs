{{#modal-window
  cloasable=false
  hasActions=true
  id="signup-modal"
  ok-caption="Sign Up!"
  showOnTransition=true
  title="Sign Up!"
  cancelAction=(action "cancel")
  okAction=(action "signUp")
}}
  {{text-input
    container-styles="bottom-spacer"
    id="name"
    label="Full Name"
    required=true
    type="text"
    value=model.name
  }}
  {{text-input
    container-styles="bottom-spacer"
    id="email"
    label="Email"
    required=true
    type="text"
    value=model.email
  }}

  {{text-input
    container-styles="bottom-spacer"
    id="password"
    label="Password"
    required=true
    type="password"
    value=password
  }}
  {{text-input
    id="password-confirm"
    label="Confirm Password"
    required=true
    type="password"
    value=passwordConfirm
  }}
{{/modal-window}}
