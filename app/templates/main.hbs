<div class="ui grid">
  <section class="sixteen wide column top-spacer">
    <nav class="ui top attached menu">
      {{#link-to "main.home.dashboard" class="item"}}
        <i class="dollar icon text-green"></i>
        Finance Tracking
      {{/link-to}}
      <div class="right menu">
        {{#if session.isAuthenticated}}
          <div class="item profile-link">
            {{profile-link model=model}}
          </div>
          {{!-- {{dropdown-nav
            logOut=(action "logOut")
          }} --}}
        {{else}}
          <div class="item">
            {{#link-to "login" id="log-in" tagName="button" class="ui labeled icon button"}}
              <i class="sign in icon"></i>
              Log In
            {{/link-to}}
          </div>
          <div class="item">
            {{#link-to "signup" id="signup" tagName="button" class="ui labeled icon button"}}
              <i class="child icon"></i>
              Sign Up
            {{/link-to}}
          </div>
        {{/if}}
      </div>
    </nav>
  </section>
