<section class="flex-display flex-center">
  <form {{action "save" on="submit"}} class="ui raised card half-width">
    <div class="content flex-column">
      <header class="header">
        New Account
      </header>
      <div class="meta">
        Create a new account for tracking finances
      </div>
      <div class="description flex-column flex-display">
        <div class="bottom-spacer flex-display flex-row">
          {{text-input
            container-styles="full-width"
            id="name"
            label="Name"
            required=true
            type="text"
            value=model.name
          }}
        </div>
        <div class="bottom-spacer flex-display flex-row">
          {{drop-down
            container-styles="half-width"
            describeItems=true
            id="account-type"
            model=accountTypes
            placeholder="Select Account Type"
            update=(action "updateType")
          }}
        </div>
        {{money-input
          container-styles="bottom-spacer"
          id="balance"
          label="Balance"
          value=balance
        }}
        {{text-box
          id="description"
          label="Description"
          required=false
          value=model.description
        }}
      </div>
    </div>
    <footer class="extra content">
      <div class="right floated">
        <button type="submit" class="ui button">Save</button>
      </div>
    </footer>
  </form>
</section>
