<section class="flex-display flex-center">
  <form {{action "save" on="submit"}} class="ui raised card auto-width">
    <div class="content flex-column">
      <header class="header">New Account</header>
      <div class="meta">
        Create a new account for tracking finances
      </div>
      <div class="description flex-column flex-display">
        <div class="bottom-spacer flex-display flex-row">
          {{text-input
            id="name"
            label="Name"
            required=true
            type="text"
            value=model.name
          }}
          {{drop-down
            id="account-type"
            placeholder="Select Account Type"
          }}
        </div>
        <div class="flex-display flex-row flex-space-between">
          {{text-input
            container-styles="bottom-spacer"
            id="rtg-number"
            label="Routing Number"
            required=true
            type="text"
            value=model.routingNumber
          }}
          {{text-input
            container-styles="bottom-spacer"
            id="acct-number"
            label="Account Number"
            required=true
            type="text"
            value=model.accountNumber
          }}
        </div>
        {{text-input
          container-styles="bottom-spacer"
          id="balance"
          label="Balance"
          required=true
          type="text"
          value=model.balance
        }}
        {{text-box
          id="description"
          label="Description"
          required=false
          value=model.description
        }}
      </div>
    </div>
    <footer class="extra content">
      <div class="right floated">
        <button type="submit" class="ui button">Save</button>
      </div>
    </footer>
  </form>
</section>
